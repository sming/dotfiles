# Supress errors
-s

--with-filename
--nogroup
--column
--smart-case
# Follow symlinks
--follow

# Add types
--type-add
js=.coffee
--type-add
html=.haml,.jst,.eco,.erb
--type-add
css=.sass,.scss

# Ignores
--ignore-file=is:examples.txt
--ignore-dir=is:log
--ignore-dir=is:.sass-cache
--ignore-dir=is:.yardoc
--ignore-dir=is:tmp
--ignore-dir=is:doc
--ignore-dir=is:coverage
--ignore-dir=is:build
--ignore-dir=is:node_modules
--ignore-dir=is:.kitchen
